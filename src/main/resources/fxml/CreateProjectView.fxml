<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<VBox styleClass="content-container" fx:id="parent" spacing="16.0" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.ntnu.idatt1002.k2_2.mitodo.view.editproject.CreateProjectView">
   <children>
      <BorderPane>
         <right>
            <HBox spacing="8.0" BorderPane.alignment="CENTER">
               <padding>
                  <Insets left="8.0" />
               </padding>
            </HBox>
         </right>
         <padding>
            <Insets bottom="8.0" right="8.0" top="8.0" />
         </padding>
         <center>
            <TextField fx:id="projectTitle" prefHeight="48.0" prefWidth="423.0" onKeyPressed="#keyListener" promptText="Project title" BorderPane.alignment="CENTER">
               <padding>
                  <Insets left="8.0" right="8.0" />
               </padding>
            </TextField>
         </center>
      </BorderPane>
      <HBox prefHeight="0.0" prefWidth="415.0">
         <children>
            <Button contentDisplay="CENTER" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" fx:id="btnSaE" onKeyPressed="#keyListener" onAction="#saveAndExit" text="Save and exit">
               <HBox.margin>
                  <Insets right="10.0" />
               </HBox.margin>
            </Button>
            <Button minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onKeyPressed="#keyListener" onAction="#cancel" text="Cancel" />
            <Pane prefHeight="27.0" prefWidth="270.0" HBox.hgrow="ALWAYS" />
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
   </padding>
</VBox>
