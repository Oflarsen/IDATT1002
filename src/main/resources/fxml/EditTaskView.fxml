<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="parent" prefWidth="613.0" spacing="16.0" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.ntnu.idatt1002.k2_2.mitodo.view.EditTaskView">
   <children>
      <HBox minHeight="-Infinity" minWidth="-Infinity">
         <children>
            <CheckBox fx:id="isDone" mnemonicParsing="false">
               <padding>
                  <Insets right="8.0" />
               </padding></CheckBox>
            <TextField fx:id="taskName" text="Task Name" HBox.hgrow="ALWAYS">
               <padding>
                  <Insets left="8.0" right="8.0" />
               </padding>
            </TextField>
         </children>
      </HBox>
       <VBox spacing="8.0">
           <padding>
               <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
           </padding>
           <Label text="Comments" />
           <TextArea fx:id="comments" />
       </VBox>
      <HBox layoutX="18.0" layoutY="18.0" prefHeight="26.0" prefWidth="243.0" spacing="8.0">
         <children>
            <Label text="Start Date" />
            <DatePicker fx:id="selectStartDate" />
         </children>
         <padding>
            <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
         </padding>
      </HBox>
      <HBox layoutX="18.0" layoutY="68.0" spacing="8.0">
         <children>
            <Label text="Due Date" />
            <DatePicker fx:id="selectDueDate" />
            <Button fx:id="btnClearDates" mnemonicParsing="false" onAction="#clearDates" text="Clear Dates" />
         </children>
         <padding>
            <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
         </padding>
      </HBox>
      <HBox spacing="8.0">
         <children>
            <Label text="Repeat" />
            <ChoiceBox fx:id="selectRepeat" minHeight="-Infinity" minWidth="-Infinity" prefWidth="120.0" HBox.hgrow="ALWAYS" />
         </children>
         <padding>
            <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
         </padding>
      </HBox>
      <HBox layoutX="18.0" layoutY="406.0" spacing="8.0">
         <children>
            <Label text="Priority" />
            <ChoiceBox fx:id="selectPriority" minHeight="-Infinity" minWidth="-Infinity" prefWidth="120.0" HBox.hgrow="ALWAYS" />
         </children>
         <padding>
            <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
         </padding>
      </HBox>
      <HBox minHeight="-Infinity" minWidth="-Infinity">
         <children>
            <Button fx:id="saveAndExitButton" contentDisplay="CENTER" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#saveAndExit" text="Save and exit">
               <HBox.margin>
                  <Insets right="10.0" />
               </HBox.margin>
            </Button>
            <Button minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#cancel" text="Cancel" />
            <Pane prefHeight="27.0" prefWidth="270.0" HBox.hgrow="ALWAYS" />
            <Button contentDisplay="RIGHT" graphicTextGap="0.0" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#delete" style="-fx-background-color: #eb2f33#eb2f33;" text="Delete" />
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
   </padding>
</VBox>
