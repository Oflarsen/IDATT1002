<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="parent" alignment="CENTER" styleClass="content-container" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.ntnu.idatt1002.k2_2.mitodo.view.ProjectView">
   <children>
      <HBox alignment="TOP_CENTER" spacing="10.0" VBox.vgrow="NEVER">
         <children>
            <HBox alignment="CENTER_LEFT" HBox.hgrow="NEVER">
               <children>
                  <Label fx:id="title" styleClass="header" text="Label">
                     <font>
                        <Font />
                     </font>
                  </Label>
               </children>
            </HBox>
            <HBox alignment="CENTER_RIGHT" spacing="20.0" HBox.hgrow="SOMETIMES">
               <children>
                  <Button alignment="CENTER_RIGHT" contentDisplay="CENTER" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#handleAddTaskButton" text="Add Task" />
                  <Button fx:id="editProjectButton" alignment="CENTER_RIGHT" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#handleEditButtonClick" text="Edit Project" />
                  <HBox fx:id="sortByContainer" alignment="CENTER" spacing="5.0">
                     <children>
                        <Label contentDisplay="TOP" text="Sort by: ">
                           <font>
                              <Font />
                           </font>
                        </Label>
                        <ComboBox fx:id="sortByComboBox" onAction="#updateShowOption" promptText="Standard" styleClass="textInBoxes" />
                     </children>
                  </HBox>
                  <HBox fx:id="showContainer" alignment="CENTER" layoutX="10.0" layoutY="10.0" spacing="5.0">
                     <children>
                        <Label contentDisplay="TOP" text="Show:">
                           <font>
                              <Font />
                           </font>
                        </Label>
                        <ComboBox fx:id="showComboBox" onAction="#updateShowOption" promptText="Show Tasks" styleClass="textInBoxes" />
                     </children>
                  </HBox>
               </children>
            </HBox>
         </children>
         <padding>
            <Insets bottom="8.0" left="32.0" right="32.0" top="8.0" />
         </padding>
      </HBox>
      <ScrollPane fitToHeight="true" fitToWidth="true" hbarPolicy="NEVER" VBox.vgrow="ALWAYS">
         <content>
            <VBox fx:id="listContainer" styleClass="content-container">
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </VBox>
         </content>
      </ScrollPane>
   </children>
</VBox>
