<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<VBox styleClass="content-container" fx:id="parent" spacing="16.0" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.ntnu.idatt1002.k2_2.mitodo.view.editproject.EditProjectView">
   <children>
      <BorderPane>
         <right>
            <HBox spacing="8.0" BorderPane.alignment="CENTER">
               <padding>
                  <Insets left="8.0" />
               </padding>
            </HBox>
         </right>
         <padding>
            <Insets bottom="8.0" right="8.0" top="8.0" />
         </padding>
         <center>
            <TextField fx:id="projectTitle" prefHeight="32.0" promptText="Project title" BorderPane.alignment="CENTER" onKeyPressed="#keyListener">
               <padding>
                  <Insets left="8.0" right="8.0" />
               </padding>
            </TextField>
         </center>
      </BorderPane>
      <HBox>
         <children>
            <Button contentDisplay="CENTER" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" fx:id="btnSaE" onAction="#saveAndExit" onKeyPressed="#keyListener" text="Save and exit">
               <HBox.margin>
                  <Insets right="8.0" />
               </HBox.margin>
            </Button>
            <Button minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#cancel" onKeyPressed="#keyListener" text="Cancel">
               <HBox.margin>
                  <Insets right="8.0" />
               </HBox.margin></Button>
            <Pane HBox.hgrow="ALWAYS" />
            <Button contentDisplay="RIGHT" graphicTextGap="0.0" minHeight="-Infinity" minWidth="-Infinity" onKeyPressed="#keyListener" mnemonicParsing="false" onAction="#delete" styleClass="error" text="Delete" />
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="8.0" left="32.0" right="32.0" top="8.0" />
   </padding>
</VBox>
