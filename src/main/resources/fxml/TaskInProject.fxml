<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="parent" onMouseClicked="#handleEditTaskButtonClick" styleClass="card" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.ntnu.idatt1002.k2_2.mitodo.view.components.TaskComponent">
   <right>
      <HBox alignment="CENTER_RIGHT" minWidth="-Infinity" spacing="8.0" BorderPane.alignment="CENTER_RIGHT">
         <children>
            <Button fx:id="deleteButton" alignment="CENTER" mnemonicParsing="false" onAction="#handleDeleteTaskButtonClick" prefHeight="25.0" prefWidth="25.0" styleClass="error">
               <HBox.margin>
                  <Insets />
               </HBox.margin>
               <graphic>
                  <ImageView fitHeight="25.0" fitWidth="25.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../images/deleteImage.png" />
                     </image>
                  </ImageView>
               </graphic>
               <tooltip>
                  <Tooltip text="Delete Task" />
               </tooltip>
            </Button>
         </children>
      </HBox>
   </right>
   <left>
      <CheckBox fx:id="isDoneCheckBox" minWidth="-Infinity" mnemonicParsing="false" onAction="#handleTaskIsDoneButtonClick" onKeyPressed="#boxKeyListener" styleClass="label" text="CheckBox" BorderPane.alignment="CENTER_LEFT">
         <font>
            <Font />
         </font>
         <BorderPane.margin>
            <Insets right="8.0" />
         </BorderPane.margin>
      </CheckBox>
   </left>
   <center>
      <HBox alignment="CENTER" prefWidth="600.0" spacing="20.0" BorderPane.alignment="CENTER">
         <children>
            <Label fx:id="priorityLabel" text="Medium Priority" />
            <Label fx:id="startDateLabel" alignment="CENTER_RIGHT" text="01.01.1001" />
            <Label text="-" />
            <Label fx:id="dueDateLabel" text="02.01.1001" />
            <Label fx:id="repeatLabel" layoutX="262.0" layoutY="24.0" text="Monthly" />
            <Label fx:id="projectNameLabel" text="Project Name" />
         </children>
         <BorderPane.margin>
            <Insets right="8.0" />
         </BorderPane.margin>
      </HBox>
   </center>
   <padding>
      <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
   </padding>
</BorderPane>
