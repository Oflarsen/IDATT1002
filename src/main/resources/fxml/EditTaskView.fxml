<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="parent" spacing="16.0" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.ntnu.idatt1002.k2_2.mitodo.view.EditTaskView">
   <children>
      <BorderPane>
         <left>
            <CheckBox fx:id="checked" mnemonicParsing="false" BorderPane.alignment="CENTER">
               <padding>
                  <Insets right="8.0" />
               </padding></CheckBox>
         </left>
         <right>
            <HBox spacing="8.0" BorderPane.alignment="CENTER">
               <children>
                  <Button mnemonicParsing="false" onAction="#save" text="Save" />
                  <Button mnemonicParsing="false" onAction="#exit" text="Exit" />
               </children>
               <padding>
                  <Insets left="8.0" />
               </padding>
            </HBox>
         </right>
         <padding>
            <Insets bottom="8.0" right="8.0" top="8.0" />
         </padding>
         <center>
            <TextField fx:id="taskName" text="Task Name" BorderPane.alignment="CENTER">
               <padding>
                  <Insets left="8.0" right="8.0" />
               </padding>
            </TextField>
         </center>
      </BorderPane>
       <VBox spacing="8.0">
           <padding>
               <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
           </padding>
           <Label text="Comments" />
           <TextArea fx:id="comments" />
       </VBox>
      <HBox layoutX="18.0" layoutY="18.0" prefHeight="26.0" prefWidth="243.0" spacing="8.0">
         <children>
            <Label text="Start Date" />
            <DatePicker fx:id="selectStartDate" />
         </children>
         <padding>
            <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
         </padding>
      </HBox>
      <HBox layoutX="18.0" layoutY="68.0" spacing="8.0">
         <children>
            <Label text="Due Date" />
            <DatePicker fx:id="selectDueDate" />
            <Button fx:id="btnClearDates" onAction="#clearDates" mnemonicParsing="false" text="Clear Dates" />
         </children>
         <padding>
            <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
         </padding>
      </HBox>
      <HBox spacing="8.0">
         <children>
            <Label text="Priority" />
            <ChoiceBox fx:id="selectPriority" />
         </children>
         <padding>
            <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
         </padding>
      </HBox>
   </children>
   <padding>
      <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
   </padding>
</VBox>
