<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<?import javafx.scene.text.Text?>
<ScrollPane fx:id="scrollParent" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.ntnu.idatt1002.k2_2.mitodo.view.ProjectView">
   <content>
      <VBox fx:id="parent">
         <children>
            <BorderPane fx:id="header">
               <left>
                  <Text fx:id="headline" text="Label" BorderPane.alignment="CENTER" styleClass="header">
                     <font>
                        <Font name="Calibri" size="36.0" />
                     </font>
                     <BorderPane.margin>
                        <Insets right="32.0" />
                     </BorderPane.margin>
                  </Text>
               </left>
               <right>
                  <HBox alignment="CENTER_LEFT" spacing="8.0" BorderPane.alignment="CENTER">
                     <children>
                        <Label alignment="TOP_LEFT" contentDisplay="TOP" text="Sort by: ">
                           <font>
                              <Font size="18.0" />
                           </font>
                        </Label>
                        <ComboBox fx:id="filterBox" onAction="#sort" promptText="Standard" styleClass="textInBoxes"/>
                        <Button contentDisplay="CENTER" mnemonicParsing="false" onAction="#handleAddTaskButton" text="Add Task" />
                        <Button fx:id="editButton" mnemonicParsing="false" onAction="#handleEditButtonClick" text="Edit Project" />
                        <ComboBox fx:id="projectsOrTasks" onAction="#showProjectOrTask" promptText="Show Tasks" />
                     </children>
                  </HBox>
               </right>
               <padding>
                  <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
               </padding>
            </BorderPane>
         </children>
      </VBox>
   </content>
</ScrollPane>
